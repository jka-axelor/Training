<?xml version="1.0"?>
<xml-inputs xmlns="http://axelor.com/xml/ns/data-import"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/data-import https://axelor.com/xml/ns/data-import/data-import_6.1.xsd">

	<input file="bonus.xml" root="employee-employees">
		<adapter name="Boolean"
			type="com.axelor.data.adapter.BooleanAdapter">
			<option name="falsePattern" value="(0|false|no|f|n)" />
		</adapter>

		<bind node="bonuses/bonus" type="com.axelor.employees.db.Bonus">
			<bind node="ename" to="ename" />
			<bind node="job" to="job" />
			<bind node="sal" to="sal" />
			<bind node="comm" to="comm" />
			<bind node="my/occasionalList/occasional" to="occasionalList">
				<bind node="name" to="name" />
				<bind node="days" to="days" />
				<bind node="bonusId" to="bonusId" />
				<bind node="flag" to="flag" adapter="Boolean" />
			</bind>
		</bind>
	</input>
</xml-inputs>