<?xml version="1.0" encoding="UTF-8"?>

<domain-models xmlns="http://axelor.com/xml/ns/domain-models"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://axelor.com/xml/ns/domain-models
  http://axelor.com/xml/ns/domain-models/domain-models_5.4.xsd">
  
	<module package="com.axelor.information.db" name="person"  />
	
	<sequence name="inpt.sequence" initial="1" padding="5" increment="1" prefix="sl" suffix="no"/>
	
	<entity name="Person">
		<string name="fullName" required="true" />
		<string name="inputslno" sequence="inpt.sequence" readonly="true"/>
		<long name="phoneNumber" min="999999999"  required="true"/>

		<many-to-one ref="com.axelor.meta.db.MetaFile" name="image" title="Image"/>
		<date name="dateOfBirth"/>
		<string name="familySize" selection="family.selection"/>
		<string name="note" multiline="true"/>
		<decimal name="monthlyIncome" precision="8" scale="2" required="true"/>
		<integer name="numberOfChild" selection="child.selection" />
	</entity>


</domain-models>